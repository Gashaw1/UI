<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title rFinder</title>*@
    <title>
        rFinder
    </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body style="background-color:#e8f0f0;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white; border-bottom:1px solid lightgray; ">
        <div class="container" style="padding:0px; height:100px;">
            <div class="navbar-header row" style="margin:0 auto; padding:0px;">
                   

               
                    <a href="@Url.Action("Index", "Home")" title="Widget View" class="links" ;">
                        <img alt="" style="height:40px;width:auto;" src="@Url.Content("~/Logo/rFinder2.png")">

                    </a>
             
               
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <br />
            </div>

            <div class="navbar-collapse collapse" style="border:1px solid white;  float:right; text-align:left;">

                <ul class="nav navbar-nav" style="">
                    <li>
                        @Html.ActionLink("Sign in /sign up", "Index", "Account")                     

                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">       
        
        <main style="margin-top:70px;">
            @RenderBody()
        </main>
        <hr />
        <footer class="row" style="height:100px; border:1px solid lightgray; background-color:white;text-align:left;padding:30px;">
            <h4>&copy; @DateTime.Now.Year  rFinder</h4>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
     
    </style>
</body>
</html>