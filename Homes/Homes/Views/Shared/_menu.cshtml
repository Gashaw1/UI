

@model IEnumerable<Homes.Models.Addresse>


@if (Model != null)
{
    <div style="height:auto; width:100%; border:1px solid lightgray; border-radius:5px; background-color:white; ">

        <table>
            @foreach (var i in Model)
            {
                var des = i.Description.desctiption;

            <tr>
                <td>
                    <img src="~/Image/@i.HouseImage.ImageNmae" ; alt="" style="height:80px;width:80px;border-radius:5px" />
                </td>
                <td>
                    <p style="color:green; width:100%; margin: auto;  text-align:justify;">
                        <br />
                        @i.city  @i.state @i.ZipCode
                        <br />
                        <small style="color:gray;">
                            @des;
                            @Ajax.ActionLink(des, "Home", "index",

                                                   new { id = i.userID },
                                                   new AjaxOptions()
                                                   {
                                                       HttpMethod = "Post",

                                                       UpdateTargetId = "divUpdate",
                                                       InsertionMode = InsertionMode.Replace
                                                   },
                               new { @style = "color:#61c2ff;" })
                        </small>
                    </p>
                </td>

            </tr>
                <tr>
                    <td>
                        <hr />
                    </td>
                    <td>
                        <hr />
                    </td>

                </tr>

            }
        </table>

    </div>
}


<style>
    td p small {
        display: inline;
        font-family: Calibri;
    }

    .mydiv {
        border: 1px solid lightgray;
        height: 10px;
        width: 10px;
        display: inline;
    }

    table td {
        padding: 20px;
        padding-bottom: 2px;
    }

    table hr {
        margin: 0px;
    }
</style>